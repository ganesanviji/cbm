<!DOCTYPE html>
<html>
<head>

<style type="text/css"></style>
  <title>FurnitureSalesSystem</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body class="layoutbody">
    <div class="page">
      <div id="header" class="header">    
        <table  style="border: none ! important" cellpadding="0" cellspacing="0" width="100%">
          <tbody>
            <tr style="border: none ! important">
              <td align="center" width="170"><img src="/images/logo.png" height="84" width="116"></td>

              <td width="530" style="border: none ! important">
                <table  style="border: none ! important" cellpadding="0" cellspacing="0" width="100%">
                  <tbody>
                    <tr style="border: none ! important">
                        <td class="frontB" style="border: none ! important" height="65">Company Name</td>
                    </tr>
                    <!-- Top panel Starts -->
                    <tr style="background:#24BCAD;border: none ! important">
                      <td class="frontC" height="97" valign="middle" style="border: none ! important"><span style="margin-left:15px;">CBM System</span></td>
                    </tr>
                    <!-- Top panel Ends -->
                  </tbody>
                </table>
              </td>

              <td id="w1">
                <table style="border: none ! important" cellpadding="0" cellspacing="0" width="102%">
                  <tbody>
                    <!-- User Details  Starts -->
                    <tr style="border: none ! important">
                      <td align="right" height="65" valign="top" style="border: none ! important;margin:0,padding:0;">
                        <table style="border: none ! important" cellpadding="2" cellspacing="2">
                          <tbody>
                            <tr style="border: none ! important">
                              <th scope="col" style="background:#40407B ! important;border:none ! important;"><img src="/images/header_05-08.jpg" height="20" width="20"></th>
                              <th scope="col" class="frontD" style="background:#40407B ! important;border:none ! important;" align="left">Hello : <%= current_user.email %> </th>
                              <th scope="col" style="background:#40407B ! important;border:none ! important;">&nbsp;</th>
                              <th scope="col" style="background:#40407B ! important;border:none ! important;"><img src="/images/header_08-10.jpg" height="20" width="20"></th>
                              <th scope="col" class="frontD" style="background:#40407B ! important;border:none ! important;" align="left"> <% if user_signed_in? %>
                         <%= link_to "Log Out", destroy_user_session_path, :method => :delete, :id=> "a" %>
                          <% end %></th>
                            </tr>
                          </tbody>
                        </table>
                      </td>
                    </tr>
                    <!-- User Details Ends-->
                    <!-- Top panel Starts -->
                    <tr>
                      <td id="system2" align="center" height="97">
                        <table style="border: none ! important" align="right" border="0" cellpadding="0" cellspacing="0" width="91%">
                          <tbody>
                            <tr style="border: none ! important">
                              <th scope="col" style="background:#24BCAD !important;text-align:center;" align="center" bgcolor="#24BCAD" height="30">
                                <span class="Day">
                                  <label id="lblday">Tue</label>
                                </span> 
                                <span class="month"> |  
                                  <label id="lblmonth"> Jul 15th</label>
                                  <label id="lblyear"> 2014</label>
                                </span>
                              </th>
                            </tr>

                            <tr style="border: none ! important">
                              <td align="center" bgcolor="#24BCAD" style="border: none ! important">
                                <span class="time">
                                  <label id="lblTym"> 10:24:08 PM</label>
                                </span>
                              </td>
                            </tr>
                          </tbody>
                        </table>
                      </td>
                    </tr>
                    <!-- Top panel Ends -->
                  </tbody>
                </table>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <!-- User Details Ends-->

      <div class="clearfix"></div>
        
      <div id="full-wrapper">
        <!-- Left Panel Starts -->
        <div id="left-side-menu" class="left-side-menu">        
          <ul role="menu" tabindex="0" class="k-widget k-reset k-header k-panelbar" data-role="panelbar" id="panelbar">
            <li role="menuitem" class="k-item k-state-default k-first">
              <%= link_to "Home", home_index_path, :class=> "k-link k-header" %>
            </li>

            <li role="menuitem" class="k-item k-state-default" aria-expanded="false">
              <span class="k-link k-header"><span>Masters<img class="arrow-down" src="../images/icon-arrow-down.png"></span><span class="k-icon k-i-arrow-s k-panelbar-expand"></span></span>
              <ul style="display: none;" aria-hidden="true" role="group" class="k-group k-panel">

                <li role="menuitem" class="k-item k-state-default k-first">
                  <%= link_to "REF Creation", references_path, :class => "k-link" %>
                </li>

                <li role="menuitem" class="k-item k-state-default k-last">
                  <%= link_to "Model Creation", models_path, :class=>"k-link" %>
                </li>

              </ul>
            </li>

            <li role="menuitem" class="k-item k-state-default" aria-expanded="false">
                <span class="k-link k-header"><span>Costing<img class="arrow-down" src="/images/icon-arrow-down.png"></span><span class="k-icon k-i-arrow-s k-panelbar-expand"></span></span>
                <ul style="display: none;" aria-hidden="true" role="group" class="k-group k-panel">
                  <li role="menuitem" class="k-item k-state-default k-first">
                    <%= link_to "CBM", cbms_path, :class => "k-link" %>
                  </li>

                  <li role="menuitem" class="k-item k-state-default k-last" aria-expanded="false">
                    <span class="k-link"><span>Cost<img class="arrow-down" src="/images/icon-arrow-down.png"></span><span class="k-icon k-i-arrow-s k-panelbar-expand"></span></span>
                    <ul style="display: none;" aria-hidden="true" role="group" class="k-group k-panel">
                      <li role="menuitem" class="k-item k-state-default k-first">
                          <%= link_to "cost", costs_path, :class => "k-link" %>
                      </li>

                      <li role="menuitem" class="k-item k-state-default k-last">
                          <%= link_to "costdetails", cost_details_path, :class => "k-link" %>
                      </li>
                    </ul>
                  </li>

                </ul>
            </li>

            <li class="k-item k-state-default k-last" role="menuitem">
                <a class="k-link k-header" href="#">Reports</a>
            </li>

          </ul>          
        </div>
      
        <!-- Left Panel Ends -->


	<%# if user_signed_in? %>
		<%#= link_to "Log Out", destroy_user_session_path, :method => :delete, :style=> "float:right;" %>
	<%# end %>
</div>
<%= yield %>

</body>
</html>
